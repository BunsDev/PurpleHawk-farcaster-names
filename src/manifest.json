{
  "manifest_version": 3,
  "name": "PurpleHawk",
  "version": "1.0.0",
  "description": "Transform your DexScreener experience by replacing wallet addresses with Farcaster names",
  "icons": {
    "16": "img/icon-16.png",
    "32": "img/icon-32.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://dexscreener.com/*",
    "https://api.neynar.com/*",    
    "https://api.base.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://dexscreener.com/*"],
      "js": ["content.js"]
    }
  ]
}